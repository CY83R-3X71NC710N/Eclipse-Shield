{
  "manifest_version": 3,
  "name": "Productivity Analyzer",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeNetRequest",
    "webNavigation",
    "tabs"
  ],
  "action": {
    "default_popup": "redirect.html",
    "default_width": 800,
    "default_height": 800
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}